{
  "exclude": ["node_modules/", "dist/"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "baseUrl": ".",
    "target": "esnext",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}

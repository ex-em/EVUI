{
  "name": "exem-evui-library",
  "description": "A EXEM Library project",
  "author": "exem <dev_client@ex-em.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@evui/eslint-config": "workspace:*",
    "@evui/stylelint-config": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nx": "19.0.4",
    "prettier": "^3.2.5",
    "stylelint": "^16.6.1"
  },
  "scripts": {
    "build": "nx run-many --target=build --projects=@evui/*",
    "types-check": "nx run-many --target=type-check --projects=@evui/*",
    "storybook": "nx run @evui/storybook:storybook",
    "graph": "nx graph",
    "reset": "nx reset",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "prettier-fix": "prettier --write .",
    "prettier-check": "prettier --check .",
    "eslint-fix": "eslint --fix .",
    "eslint-check": "eslint .",
    "stylelint-fix": "stylelint --fix **/*.{css,scss,sass,vue,html}",
    "stylelint-check": "stylelint **/*.{css,scss,sass,vue,html}"
  }
}

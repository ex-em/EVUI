{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "src/global.d.ts"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "baseUrl": ".",
    "target": "esnext",
    "declaration": true,
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false
  }
}

{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["vite.config.ts", "./src/**/*.ts", "./src/**/*.vue"],
  "exclude": ["node_modules", "dist", "src/global.d.ts"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "baseUrl": ".",
    "target": "esnext",
    "declaration": true,
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
